<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="spit.vortex17">

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true">
        <service
            android:name="spit.vortex17.HelperClasses.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo_small" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimaryDark" />

        <service android:name="spit.vortex17.HelperClasses.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!--
        <provider
            android:name=".HelperClasses.MatrixContentProvider"
            android:authorities="spit.matrix2017.provider"
            android:enabled="true"
            android:exported="false" />
        -->

        <activity
            android:name="spit.vortex17.Activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="spit.vortex17.Activities.EventDetails"
            android:label="@string/title_activity_event_details"
            android:parentActivityName="spit.vortex17.Activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="spit.vortex17.Activities.MainActivity" />
        </activity>
        <activity
            android:name="spit.vortex17.Activities.LoginPage"
            android:theme="@style/AppTheme" />
        <activity
            android:name="spit.vortex17.Activities.AddEvent"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="spit.vortex17.Activities.RegConfirm"
            android:theme="@style/AppTheme" />
        <activity
            android:name="spit.vortex17.Activities.GiveFeedback"
            android:theme="@style/AppTheme" />
        <activity
            android:name="spit.vortex17.Activities.AddEvent2"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="spit.vortex17.Activities.MyRegistrations"
            android:theme="@style/AppTheme" />
        <activity
            android:name="spit.vortex17.Activities.EditEvent"
            android:label="@string/title_activity_edit_event"
            android:theme="@style/AppTheme" />
        <activity
            android:name="spit.vortex17.Activities.SignInVideo"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>